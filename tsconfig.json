{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"./src/*.ts"
	]
}